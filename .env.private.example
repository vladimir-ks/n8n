# =================================================
# PRIVATE ENVIRONMENT CONFIGURATION FOR N8N DEPLOYMENT
# =================================================
# Copy this file to .env.private and fill in your values
# DO NOT commit .env.private to the repository
# =================================================

# Domain Configuration
# -------------------
# Your primary n8n domain
N8N_DOMAIN=example.com
# Port for n8n (default: 5678)
N8N_PORT=5678
# Protocol (http or https)
N8N_PROTOCOL=https
# Host IP for local development
HOST_IP=127.0.0.1

# Additional Domains (if using multiple environments)
# --------------------------------------------------
# Local development domain
LOCAL_DOMAIN=n8n.local
# Cloud/Production domain
CLOUD_DOMAIN=n8n.example.com

# File Paths
# ----------
# Directory where n8n data is stored
N8N_DATA_DIR=~/.n8n
# Directory where SSL certificates are stored
SSL_CERTS_DIR=/etc/letsencrypt
# Path to SSL certificate (fullchain.pem)
SSL_CERT_PATH=/etc/letsencrypt/live/example.com/fullchain.pem
# Path to SSL key (privkey.pem)
SSL_KEY_PATH=/etc/letsencrypt/live/example.com/privkey.pem
# Directory for backups
BACKUP_DIR=~/n8n-backups

# Resource Allocation
# ------------------
# CPU and memory allocation for containers
N8N_CPU_LIMIT=1
N8N_MEMORY_LIMIT=2048M
N8N_CPU_RESERVATION=0.5
N8N_MEMORY_RESERVATION=1024M
NGINX_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=256M
NGINX_CPU_RESERVATION=0.25
NGINX_MEMORY_RESERVATION=128M

# Security
# --------
# IMPORTANT: This encryption key must be identical across all n8n instances
# to share credentials and encrypted data. Generate a secure random string.
N8N_ENCRYPTION_KEY=replace_with_a_secure_random_string
